<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="kami_sm.attendance_users_action" model="ir.actions.act_window">
    <field name="name">UsuÃ¡rios</field>
    <field name="res_model">res.users</field>
    <field name="view_mode">tree,form,kanban</field>
    <field name="context">{'search_default_available': True}</field>
  </record>

  <record id="kami_sm_users_view_tree" model="ir.ui.view">
    <field name="name">res.users.tree</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_tree"/>
    <field name="arch" type="xml">
        <tree position="replace">
            <tree string="UsuÃ¡rios">
                <field name="name"/>
                <field name="email"/>
                <field name="login"/>
                <field name="login_date"/>
            </tree>
        </tree>
    </field>
  </record>

  <record id="kami_sm_users_view_form" model="ir.ui.view">
    <field name="name">res.users.form</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_form"/>
    <field name="arch" type="xml">
        <field name="partner_id" position="after">
            <field name="is_backoffice"/>
        </field>
    </field>
  </record>

  <record id="kami_sm_users_view_simple_form" model="ir.ui.view">
    <field name="name">res.users.form</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_simple_form"/>
    <field name="arch" type="xml">
        <group name="phone_numbers" position="after">
            <group name="team">
                <field name="is_backoffice"/>
            </group>
        </group>
    </field>
  </record>

  <record id="kami_sm_users_view_kanban" model="ir.ui.view">
    <field name="name">res.users.kanban</field>
    <field name="model">res.users</field>
    <field name="arch" type="xml">
      <kanban
        default_group_by="state"
        records_draggable="false"
      >
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click">
              <group>
                <field name="image_128"/>
              </group>
              <group>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
              </group>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>
</odoo>
