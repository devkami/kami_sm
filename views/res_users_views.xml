<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="kami_sm_attendance_user_action" model="ir.actions.act_window">
    <field name="name">Usuários</field>
    <field name="res_model">res.users</field>
    <field name="view_mode">tree,form,kanban</field>
    <field name="context">{'search_default_available': True}</field>
  </record>

  <record id="kami_sm_user_view_tree" model="ir.ui.view">
    <field name="name">res.users.tree</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_tree"/>
    <field name="arch" type="xml">    
      <xpath expr="//tree" position="replace">	
        <tree string="Usuários">
          <field name="name"/>
          <field name="email"/>
          <field name="phone"/>          
        </tree>
      </xpath>              
    </field>
  </record>

  <record id="kami_sm_user_view_form" model="ir.ui.view">
    <field name="name">res.users.form</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_simple_form"/>
    <field name="arch" type="xml">
    	<xpath expr="//sheet" position="after">        
        <notebook>
          <page string="Parceiros">
            <group>
              <field name="partner_ids">
                <tree>
                  <field name="name"/>
                  <field name="email"/>
                  <field name="phone"/>
                </tree>
              </field>                              
            </group>
          </page>
        </notebook>
      </xpath>
    </field>
  </record>

  <record id="kami_sm_user_view_kanban" model="ir.ui.view">
    <field name="name">res.users.kanban</field>
    <field name="model">res.users</field>
    <field name="arch" type="xml">
      <kanban 
        default_group_by="state"
        records_draggable="false"
      > 
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click">
              <group>
                <field name="avatar_128"/>
              </group>
              <group>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
              </group>              
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <record id="view_kami_sm_user_search" model="ir.ui.view">
    <field name="name">res.users.search</field>
    <field name="model">res.users</field>
    <field name="arch" type="xml">
      <search string="Usuário">
        <field name="name"/>                        
        <separator/>            
      </search>
    </field>
  </record>

</odoo>
